#ifndef _BUILD_CONFIG_
#define _BUILD_CONFIG_

#include <stdint.h>

/**
 * \defgroup ipxInternalBuildConfig Build configuration
 * \ingroup internalAPIs
 * \brief These definitions represent configuration options for build.
 *
 * @{
 */

/** \brief IPFIXcol major version  */
#define IPX_MAJOR_VERSION (@IPFIXCOL_VERSION_MAJOR@U)
/** \brief IPFIXcol minor version  */
#define IPX_MINOR_VERSION (@IPFIXCOL_VERSION_MINOR@U)
/** \brief IPFIXcol patch version  */
#define IPX_PATCH_VERSION (@IPFIXCOL_VERSION_PATCH@U)

/** \brief Path to default (if not specified) user configuration file */
#define IPX_DEFAULT_STARTUP_CONFIG \
	"@CMAKE_INSTALL_FULL_SYSCONFDIR@/ipfixcol2/startup.xml"
/** \brief Path to default ipfix-elements specification file          */
#define IPX_DEFAULT_IPFIX_ELEMENTS \
	"@CMAKE_INSTALL_FULL_SYSCONFDIR@/ipfixcol2/ipfix-elements.xml"
/** \brief Path to the directory with plugins                         */
#define IPX_DEFAULT_PLUGINS_DIR \
	"@CMAKE_INSTALL_FULL_LIBDIR@/ipfixcol2/"

/**@}*/

#endif /* _BUILD_CONFIG_ */

